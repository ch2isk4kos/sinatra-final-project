<h1>Edit <%= @user.username %></h1>
<form action="/users/<%= "#{@user.id}" %>" method="post">
  <h3>Username: <input type="text" name="username" value="<%= @user.username %>" id="username"></h3>
  <br>
  <h3>Email: <input type="text" name="email" value="<%= @user.email %>" id="email"></h3>
  <br>
  <h3>Password: <input type="password" name="password" id="email"></h3><span><p>(enter password to validate changes)</p></span>
  <br>
  <input type='hidden' name='_method' value='patch'>
  <input type="submit" value="Update">
</form>
